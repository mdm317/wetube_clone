header.header
    .header__wrapper
        .header__column
            a(href=routes.home)
                 img(src="https://img.icons8.com/cute-clipart/64/000000/youtube.png")
        .header__column
            form(action=routes.search, method="get")
                input(type="text", placeholder="Search by term...", name="term")
        .header__column
            ul
                if !loggedUser
                    li
                        a(href=routes.join) Join
                    li
                        a(href=routes.login) Log In
                else 
                    li
                        a(href=`/videos${routes.upload}`) Upload
                    li
                        a(href=routes.userDetail(loggedUser.id)) Profile
                    li
                        a(href=routes.logout) Log Out
